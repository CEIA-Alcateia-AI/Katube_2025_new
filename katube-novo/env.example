# AUDIO_FORMAT=flac

# Configurações de segmentação
# SEGMENT_MIN_DURATION=10.0
# SEGMENT_MAX_DURATION=15.0

# Configurações de servidor
# FLASK_DEBUG=True
# FLASK_HOST=0.0.0.0
# FLASK_PORT=5000

# Configurações de segmentação avançada
#MAX_SEGMENTS=10000  # Para vídeos longos 

# YouTube API (para busca de canais)
# YOUTUBE_API_KEY=sua_chave_api_youtube_aqui

# Configurações MOS (OBRIGATÓRIO)
# MOS_THRESHOLD=2.0  # Limiar mínimo para aceitar áudio (1-5)
# NOTA: Filtro MOS é OBRIGATÓRIO e sempre habilitado
